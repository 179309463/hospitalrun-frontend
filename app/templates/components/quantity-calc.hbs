{{#with unitList as unitList}}
  {{#each quantityGroups}}
      {{quantity-conv unit=this.unit firstQuantity=this.firstQuantity unitName=this.unitName index=this.index quantity=this.quantity unitList=unitList}}
  {{/each}}
{{/with}}
{{#if showTotal}}
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label>{{targetUnit}} total: {{calculated}} </label>
            </div>
        </div>
    </div>
{{/if}}
