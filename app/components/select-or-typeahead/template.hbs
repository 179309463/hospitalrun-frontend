{{#if userCanAdd}}
  {{#if usePricingTypeAhead}}
    {{pricing-typeahead class=className property=property 
      label=label content=content
      selection=selection
    }}
  {{else}}
    {{type-ahead class=className property=property 
      label=label content=content
      selection=selection setOnBlur=setOnBlur hint=hint
    }}
  {{/if}}
{{else}}
  {{em-select class=className label=label
    property=property content=content
    optionValuePath=optionValuePath optionLabelPath=optionLabelPath
    selected=selection prompt=prompt
  }}
{{/if}}
